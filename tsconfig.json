{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["vitest/globals"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*", "./*"],
      "@/lib/*": ["./lib/*"],
      "@/types": ["./types"],
      "@/types/*": ["./types/*"],
      "@/components/*": ["./src/components/*", "./app/components/*"],
      "@/contexts/*": ["./app/contexts/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/api/*": ["./app/api/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "types/**/*.ts"],
  "exclude": ["node_modules"]
}
